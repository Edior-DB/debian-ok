# History control
shopt -s histappend
HISTCONTROL=ignoreboth
HISTSIZE=32768
HISTFILESIZE="${HISTSIZE}"

# Autocompletion
source /usr/share/bash-completion/bash_completion

# Set complete path
export PATH="./bin:$HOME/.local/bin:$HOME/.local/share/debian-ok/bin:$PATH"
set +h

export DEBIANOK_PATH="/home/$USER/.local/share/debian-ok"
export OMAKUB_PATH="$DEBIANOK_PATH"
